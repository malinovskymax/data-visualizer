#ruby '2.2.1'

gem 'rails', '4.2.0'

gem 'bower-rails'
gem 'active_model_serializers', github: 'rails-api/active_model_serializers'

# Assets
gem 'slim'
gem 'sass-rails', '~> 5.0.1'

# Scripts
gem 'coffee-rails', '~> 4.1.0'
gem 'uglifier', '>= 1.3.0'
